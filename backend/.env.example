# Application
APP_NAME=Agentic QA Backend
DEBUG=true
API_V1_STR=/api/v1
CORS_ORIGINS=http://localhost:3000

# Database (NeonDB connection string)
# Format: postgresql://[user]:[password]@[host]/[dbname]?sslmode=require
DATABASE_URL=

# Redis (local: redis://localhost:6379 | Railway: rediss://default:PASSWORD@...proxy.rlwy.net:PORT)
# Use local Redis if Railway times out (firewall/network).
REDIS_URL=

# OpenRouter LLM (add in T8)
# OPENROUTER_API_KEY=

# Worker (run_worker.py)
# REDIS_CONSUMER_NAME=worker-myhost-12345-abc (optional; default: worker-{hostname}-{pid}-{uuid})
# STUCK_RUN_TIMEOUT_MINUTES=10 (optional; runs in 'running' longer than this are marked failed)
# RECOVERY_CHECK_INTERVAL_SECONDS=60 (optional; how often to check for stuck runs)
